<!-- error.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error</title>
    <style>
      /* Add your CSS styles for error page here */
      body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        padding: 20px;
      }
      .error-container {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 20px auto;
        max-width: 600px;
      }
      h1 {
        color: #dc3545;
      }
      p {
        color: #333;
      }
    </style>
  </head>
  <body>
    <div class="error-container">
      <h1>Error</h1>
      <p><%= error.message %></p>
      <% if (showStack) { %>
      <pre><%= error.stack %></pre>
      <% } %>
      <a href="/">Back to Home</a>
    </div>
  </body>
</html>
